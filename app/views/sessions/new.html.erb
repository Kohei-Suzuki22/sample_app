<% provide(:title, "Login") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, for: "session_email"  %>
      <%= f.email_field :email, id: "session_email", class: "form-control" %>

      <%= f.label :password, for: "session_password" %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, id: "session_password", class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, id:"session_remember_me", class: "remember_me" %>
        <span class="remember_me">Remember me on this computer</span>
      <% end %>


      <%= f.submit "Log in", class: "submit-btn btn btn-primary" %>
    <% end %>

    <p>New User? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
